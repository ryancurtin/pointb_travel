<div class="paddedcontent">
<h1><%= @hotelname %></h1>
<%= image_tag "#{@image1}" %>


<br />

<div id="bookingresults">

<div class="row">
  <div class="span3"><b>Room Type</b></div>

<% @bookingdetails['result']['availableDates'].each do |room| %>
  <div class="span2"><b><% z = Date.parse room %><%= z.month %>/<%= z.day%>/<%= z.year %></b></div>
<% end %>
</div>
	
<% @bookingdetails['result']['roomTypes'].each do |room| %>
  <div class="row" id="highlight"><div class="span3"><%= room['description'] %></div>
    

    <% room['availability'].each do |x| %>
      <div class="span2">
      <!-- # of Beds: --> <%= x.last.first['beds'] %> | 
      <!--Price in USD: --> <% @price = x.last.first['price'] %><%= number_to_currency(@price) %>
      </div>

    <% end %>
  <div class="span2">Total Cost: <% @totalcost = number_to_currency(@price.to_f * @bookingdetails['result']['availableDates'].length) %><%= @totalcost %></div>
  Select this room: <input type="radio" name="selector"   value=<%="#{room['code']}" %> />
  </div>


<% end %>

<script>
    $("#selector").live("click", function () {
      var room_code = $('#selector').val();
      $.post("/payment", { roomcode = room_code });
    });
  
</script>



</div>



