<div class="paddedcontent" id="vacheading">
<h2>See Where Others are Going:</h1>
<h3>Our Most Popular Destinations: </h3>
<br />
<div class="searchimages">
 <% @vacationsex.each do |vac| %>
   <figure>
     <%#= link_to image_tag(vac.image), vacation_path(vac) %>
     <figcaption><%= vac.destination %></figcaption>
   </figure>
 <% end %>
 </div>
<div class="clear"></div>


<h3>Enter a City:</h3>
<br />	
<%= form_tag vacations_path, :method => 'get', :remote => true do %>
<div class="row-fluid">
  <input type="text" class="vacationsearch" name="city" id="city"/>
</div>
<div class="row-fluid">
    <div class="span10">
    <%= submit_tag "Find Vacations", :class => "btn-primary btn-large" %>
    </div> 
</div>
<% end %>


<div id="results">
<%= render 'newvac', :layout => false %>

</div>
<br />

</div>